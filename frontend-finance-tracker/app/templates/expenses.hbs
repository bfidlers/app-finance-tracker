{{page-title "Expenses"}}
<ul>
    {{#each @model as |expense|}}
    <li>
        {{expense.name}} <small>{{expense.amount}}</small>
        <button type="button" {{on "click" (fn this.removeExpense expense)}}>Remove</button>
    </li>
    {{/each}}
</ul>

<hr />
<form {{on "submit" this.createExpense}}>
    <dl>
        <dt>Name</dt>
        <dd>
            <Input @value={{this.name}} />
        </dd>
        <dt>Amount</dt>
        <dd>
            <Input @value={{this.amount}} />
        </dd>
        <dt>Currency</dt>
        <dd>
            <Input @value={{this.currency}} />
        </dd>
        <dt>Date</dt>
        <dd>
            <Input @type="date" @value={{this.date}} />
        </dd>
        <dt>Description</dt>
        <dd>
            <Textarea @value={{this.description}} />
        </dd>
        <dt>Category</dt>
        <dd>
            <Input @value={{this.category}} />
        </dd>
        <dt>Payment Method</dt>
        <dd>
            <Input @value={{this.paymentMethod}} />
        </dd>
        <dt>Location</dt>
        <dd>
            <Input @value={{this.location}} />
        </dd>
    </dl>
    <button type="submit">Create</button>
</form>

{{outlet}}