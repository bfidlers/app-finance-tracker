<div id="my-chart">

    <table class="charts-css column show-heading show-labels show-primary-axis data-spacing-15 show-data-on-hover">

        <caption> Chart Heading </caption>

        <thead>
            <tr>
                <th scope="col"> Year </th>
                <th scope="col"> Value </th>
            </tr>
        </thead>

        <tbody>
            <tr>
                <th> 2016 </th>
                <td style="--size: calc( 20 / 100 );"> <span class="data"> 20 </span></td>
            </tr>
            <tr>
                <th> 2017 </th>
                <td style="--size: calc( 40 / 100 );"> <span class="data"> 40 </span> </td>
            </tr>
            <tr>
                <th> 2018 </th>
                <td style="--size: calc( 60 / 100 );"> <span class="data"> 60</span></td>
            </tr>
            <tr>
                <th> 2019 </th>
                <td style="--size: calc( 80 / 100 );"> <span class="data"> 80 </span> </td>
            </tr>
            <tr>
                <th> 2020 </th>
                <td style="--size: calc( 100 / 100 );"> <span class="data"> 100 </span> </td>
            </tr>
        </tbody>

    </table>

    <ul class="charts-css legend legend-rectangle">
        <li> Label 1 </li>
        <li> Label 2 </li>
        <li> Label 3 </li>
        <li> Label 4 </li>
        <li> Label 5 </li>
    </ul>

</div>

